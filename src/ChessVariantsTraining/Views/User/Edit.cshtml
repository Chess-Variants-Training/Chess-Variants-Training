@section Title {Edit your profile}
@model ChessVariantsTraining.Models.User
<h1>Edit your profile</h1>
@{ Html.BeginForm("EditPost", "User", FormMethod.Post); }
Username: <input type="text" name="username" value="@Model.Username"><br>
Email: <input type="text" name="email" value="@Model.Email"> (private)<br>
About you:<br>
<textarea name="about" cols="75" rows="14"></textarea><br>
<input type="submit" value="Submit">
@{ Html.EndForm(); }
@Html.ActionLink("Change your password", "ChangePassword", "User")
