@section Title {Register}
@if (ViewBag.Error != null)
{
    @foreach (string err in ViewBag.Error)
    {
        <div class="error">@err</div>
    }
}
<h1>Register for an account</h1>
@{ Html.BeginForm("New", "User", FormMethod.Post); }
<p>Username: <input type="text" placeholder="Username" name="username"></p>
<p>Password: <input type="password" name="password"></p>
<p>Email: <input type="text" placeholder="Email" name="email"></p>
<input type="submit" value="Sign up">
@{ Html.EndForm(); }
<p>By signing up you agree with our @Html.ActionLink("Terms of Service", "TermsOfService", "Misc") and @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Misc").</p>