@section Title {Register}
@section AddToHead{<script src="https://www.google.com/recaptcha/api.js" async type="text/javascript"></script>}
@if (ViewBag.Error != null)
{
    @foreach (string err in ViewBag.Error)
    {
        <div class="error">@err</div>
    }
}
<h1>Register for an account</h1>
@{ Html.BeginForm("New", "User", FormMethod.Post); }
<p>Username: <input type="text" placeholder="Username" name="username"></p>
<p>Password: <input type="password" name="password"></p>
<p>Password confirmation: <input type="password" name="passwordConfirmation"></p>
<p>Email: <input type="text" placeholder="Email" name="email"></p>
<p><input type="checkbox" name="consent" value="true"> I agree with the @Html.ActionLink("Terms of Service", "TermsOfService", "Misc") and @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Misc").</p>
<div class="g-recaptcha" data-sitekey="6Le28SIUAAAAAFsIbAkUzYvJqqCUZwdgMBVayWvW"></div>
<input type="submit" value="Sign up">
@{ Html.EndForm(); }