            <li>@Html.ActionLink("KQ vs K with adjacent kings and a blocked pawn", "AtomicEndgame", new { type = "KQ-K-Adjacent-Kings-Blocked-Pawn" })</li>
            <li>@Html.ActionLink("KRN vs K with separated kings", "AtomicEndgame", new { type = "KRN-K-Separated-Kings" })</li>
            <li>@Html.ActionLink("KRN vs K with adjacent kings", "AtomicEndgame", new { type = "KRN-K-Adjacent-Kings" })</li>
            <li>@Html.ActionLink("KRB vs K with separated kings", "AtomicEndgame", new { type = "KRB-K-Separated-Kings" })</li>
            <li>@Html.ActionLink("KRB vs K with adjacent kings", "AtomicEndgame", new { type = "KRB-K-Adjacent-Kings" })</li>


        </ul>
    </li>
